{
  "compilerOptions": {
    "target": "es2017",
    // "module": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    },
    "sourceRoot": "src",
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    // "types": [
    // "reflect-metadata",
    // "jest"
    // ],
  },
  "typeRoots": [
    "node_module/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}